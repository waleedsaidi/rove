<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rova.Mobile.Controls.ModernCard"
             BackgroundColor="{DynamicResource CardBackgroundColor}"
             Padding="16"
             CornerRadius="8"
             Margin="8">
    <Frame BackgroundColor="Transparent" HasShadow="True" CornerRadius="8">
        <StackLayout>
            <Image Source="{Binding ImageSource}" Aspect="AspectFill" HeightRequest="150" />
            <Label Text="{Binding Title}" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   TextColor="{DynamicResource TitleTextColor}" 
                   HorizontalOptions="Center" />
            <Label Text="{Binding Description}" 
                   FontSize="14" 
                   TextColor="{DynamicResource DescriptionTextColor}" 
                   HorizontalOptions="Center" 
                   LineBreakMode="TailTruncation" />
            <Button Text="Learn More" 
                    BackgroundColor="{DynamicResource ButtonBackgroundColor}" 
                    TextColor="White" 
                    Command="{Binding LearnMoreCommand}" 
                    CornerRadius="5" 
                    Margin="0,10,0,0" />
        </StackLayout>
    </Frame>
</ContentView>