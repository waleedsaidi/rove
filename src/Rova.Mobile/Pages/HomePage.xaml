<Content of /rova-solution/rova-solution/src/Rova.Mobile/Pages/HomePage.xaml>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rova.Mobile.Pages.HomePage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="20">
        <Image Source="logo.png" 
               HorizontalOptions="Center" 
               VerticalOptions="Start" 
               HeightRequest="150"/>
        <Label Text="Welcome to Rova Car Workshop" 
               FontSize="24" 
               HorizontalOptions="Center" 
               TextColor="{DynamicResource PrimaryTextColor}"/>
        <Button Text="Explore Services" 
                BackgroundColor="{DynamicResource AccentColor}" 
                TextColor="White" 
                Command="{Binding NavigateToServicesCommand}" 
                HorizontalOptions="Center" 
                VerticalOptions="End"/>
    </StackLayout>

</ContentPage>