<Content>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rova.Mobile.Pages.DebtsPage"
             Title="Debts"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <StackLayout Padding="20">
        <Label Text="Customer Debts"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="{DynamicResource PrimaryTextColor}" />

        <CollectionView x:Name="DebtsCollectionView"
                        ItemsSource="{Binding Debts}"
                        Margin="0,20,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="{DynamicResource FrameBorderColor}"
                           CornerRadius="10"
                           Padding="10"
                           Margin="0,5">
                        <StackLayout>
                            <Label Text="{Binding CustomerName}"
                                   FontSize="18"
                                   TextColor="{DynamicResource PrimaryTextColor}" />
                            <Label Text="{Binding Amount, StringFormat='Debt: {0:C}'}"
                                   FontSize="16"
                                   TextColor="{DynamicResource SecondaryTextColor}" />
                            <Label Text="{Binding DueDate, StringFormat='Due: {0:MM/dd/yyyy}'}"
                                   FontSize="14"
                                   TextColor="{DynamicResource TertiaryTextColor}" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Add New Debt"
                Command="{Binding AddDebtCommand}"
                BackgroundColor="{DynamicResource AccentColor}"
                TextColor="White"
                Margin="0,20,0,0" />
    </StackLayout>
</ContentPage>
</Content>