<Content>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rova.Mobile.Pages.Merchant.MerchantDashboardPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Merchant Dashboard"
                   FontSize="32"
                   HorizontalOptions="Center"
                   TextColor="{DynamicResource PrimaryTextColor}" />

            <Grid Margin="0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Text="Attendance Reports"
                        Grid.Column="0"
                        BackgroundColor="{DynamicResource ButtonColor}"
                        TextColor="White"
                        Command="{Binding NavigateToAttendanceReportsCommand}" />

                <Button Text="Performance Tracking"
                        Grid.Column="1"
                        BackgroundColor="{DynamicResource ButtonColor}"
                        TextColor="White"
                        Command="{Binding NavigateToPerformanceCommand}" />
            </Grid>

            <Grid Margin="0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Text="Daily Reports"
                        Grid.Column="0"
                        BackgroundColor="{DynamicResource ButtonColor}"
                        TextColor="White"
                        Command="{Binding NavigateToDailyReportCommand}" />

                <Button Text="Weekly Reports"
                        Grid.Column="1"
                        BackgroundColor="{DynamicResource ButtonColor}"
                        TextColor="White"
                        Command="{Binding NavigateToWeeklyReportCommand}" />
            </Grid>

            <Label Text="Statistics"
                   FontSize="24"
                   HorizontalOptions="Center"
                   TextColor="{DynamicResource PrimaryTextColor}" />

            <StackLayout Margin="0,20">
                <Label Text="Total Services: {Binding TotalServices}"
                       TextColor="{DynamicResource SecondaryTextColor}" />
                <Label Text="Total Revenue: {Binding TotalRevenue}"
                       TextColor="{DynamicResource SecondaryTextColor}" />
                <Label Text="Total Customers: {Binding TotalCustomers}"
                       TextColor="{DynamicResource SecondaryTextColor}" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
</Content>