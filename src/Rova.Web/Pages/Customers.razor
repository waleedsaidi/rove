@page "/customers"

@using Rova.Shared.Models
@inject HttpClient Http

<h3>Customers</h3>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Service History</th>
        </tr>
    </thead>
    <tbody>
        @if (customers != null && customers.Any())
        {
            foreach (var customer in customers)
            {
                <tr>
                    <td>@customer.Name</td>
                    <td>@customer.Email</td>
                    <td>@customer.Phone</td>
                    <td>
                        <button class="btn btn-info" @onclick="() => ShowServiceHistory(customer.Id)">View History</button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">No customers found.</td>
            </tr>
        }
    </tbody>
</table>

@code {
    private List<CustomerDto> customers;

    protected override async Task OnInitializedAsync()
    {
        customers = await Http.GetFromJsonAsync<List<CustomerDto>>("api/customers");
    }

    private void ShowServiceHistory(int customerId)
    {
        // Logic to show service history for the selected customer
    }
}